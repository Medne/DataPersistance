<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="16dp"
    tools:context="io.androidedu.datapersistance.ui.sql.DashboardActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/adapter_item_guest_list_txtGuestName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Gökhan" />

        <TextView
            android:id="@+id/adapter_item_guest_list_txtGuestSurname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="ÖZTÜRK" />

    </LinearLayout>

    <TextView
        android:id="@+id/adapter_item_guest_list_txtGuestPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="right|end"
        tools:text="5316266302" />

</LinearLayout>
